{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "shell:allow-open",
    "macos-permissions:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$HOME/**/*"
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "run-applescript",
          "cmd": "osascript",
          "args": [
            "-e",
            {
              "validator": ".+"
            }
          ]
        },
        {
          "name": "python-version",
          "cmd": "/Users/dio/workspace/mamba/envs/playground/bin/python",
          "args": [
            "--version"
          ]
        }
      ]
    }
  ]
}
